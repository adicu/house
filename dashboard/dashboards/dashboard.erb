<script type='text/javascript'>
  $(function() {
      Dashing.widget_base_dimensions = [390, 380]
      Dashing.numColumns = 4
      });
</script>

<% content_for(:title) { "ADI House Dashboard" } %>

<div class="gridster">
  <ul>
    
    <!-- Foursquare -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
    <div data-id="foursquare" data-view="Foursquare"></div>
    </li>

    <!-- Forecast -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="2">
    <div data-id="forecast" data-view="Forecast"></div>
    </li>

    <!-- Calendar -->
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
    <div data-id="calendar_events" data-pre="0" data-view="Calendar"></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
    <div data-id="calendar_events" data-pre="1"  data-view="Calendar"></div>
    </li>

    <!-- Time -->
    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
    <div data-id="clock" data-pre="1"  data-view="Clock" style="background: #7D0246"></div>
    </li>

  </ul>
</div>
